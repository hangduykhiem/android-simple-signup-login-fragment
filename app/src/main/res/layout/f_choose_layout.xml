<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="@dimen/padding_default">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/padding_logo"
        android:src="@drawable/c_logo"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/f_choose_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/f_choose_log_in" />


    <Button
        android:id="@+id/f_choose_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/f_choose_log_in"
        android:text="@string/f_choose_sign_up" />

</RelativeLayout>